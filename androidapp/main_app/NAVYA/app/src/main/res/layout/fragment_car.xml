<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/car_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background_rounded">

    <!-- Base car image -->
    <ImageView
        android:id="@+id/car_main"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/car_main"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Safe image -->
    <ImageView
        android:id="@+id/car_safe"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/safe"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:visibility="gone" />

    <!-- Medium image -->
    <ImageView
        android:id="@+id/car_medium"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/medium"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:visibility="gone" />

    <!-- Danger image -->
    <ImageView
        android:id="@+id/car_danger"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/danger"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:visibility="gone" />

    <!-- Shadow overlay -->
    <ImageView
        android:id="@+id/car_shadow"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/car_shadow" />

    <!-- Left signal overlay -->
    <ImageView
        android:id="@+id/car_left"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/car_left"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Right signal overlay -->
    <ImageView
        android:id="@+id/car_right"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/car_right"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!-- Left MaterialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_left"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Left"
        android:textColor="@android:color/white"
        android:backgroundTint="#333333"
        app:cornerRadius="8dp" />

    <!-- Off MaterialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_off"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="Off"
        android:textColor="@android:color/white"
        android:backgroundTint="#333333"
        app:cornerRadius="8dp" />

    <!-- Right MaterialButton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_right"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Right"
        android:textColor="@android:color/white"
        android:backgroundTint="#333333"
        app:cornerRadius="8dp" />

</FrameLayout>
