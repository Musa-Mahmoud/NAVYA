<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_dark_surface_light_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Feed"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_safe"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:text="Safe"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:backgroundTint="#4CAF50" /> <!-- Green -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_medium"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:text="Medium"
            android:textColor="@android:color/black"
            app:cornerRadius="12dp"
            android:backgroundTint="#FFC107"
            android:layout_marginTop="12dp" /> <!-- Yellow -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_danger"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:text="Danger"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:backgroundTint="#F44336"
            android:layout_marginTop="12dp" /> <!-- Red -->

    </LinearLayout>
</FrameLayout>
